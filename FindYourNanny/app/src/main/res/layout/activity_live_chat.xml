<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".LiveChat">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_exercise"
        app:title="Nanny"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:subtitleTextColor="@color/white"
        android:background="@color/colorPrimary"
        app:titleTextColor="@color/white"

        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"></androidx.appcompat.widget.Toolbar>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="110"
        android:src="@color/LightPeach">
    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="0dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_height="wrap_content"
            android:hint="Message"
            android:fontFamily="@font/audiowide"
            android:textSize="20dp"
            android:layout_weight="10"
            android:padding="5dp"
            android:drawableEnd="@drawable/attach"
            android:drawableStart="@drawable/emoji"
            android:background="@drawable/stroke"></EditText>
        <ImageView
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:src="@drawable/send"></ImageView>
    </LinearLayout>


</LinearLayout>