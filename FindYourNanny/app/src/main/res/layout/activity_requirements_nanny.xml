<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequirementsParent"
    android:background="@color/LightBlue"
    >
    <LinearLayout
        android:layout_margin="20dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black"
            android:fontFamily="@font/audiowide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JOB REQUIREMENTS"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="30dp"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/audiowide"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"

            android:layout_marginTop="50dp"
            android:text="Age"></TextView>
        <EditText

            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/stroke"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Enter your age"
            android:textSize="15dp"
            android:fontFamily="@font/audiowide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/audiowide"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:text="Marital Status"></TextView>
        <RadioButton
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Married"
            android:textSize="15dp"
            android:fontFamily="@font/audiowide"/>
        <RadioButton
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unmarried"
            android:textSize="15dp"
            android:fontFamily="@font/audiowide"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/audiowide"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:text="About You"></TextView>
        <EditText

            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/stroke"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Describe Yourself"
            android:layout_gravity="top"
            android:gravity="top"
            android:textSize="15dp"
            android:fontFamily="@font/audiowide"
            android:layout_width="match_parent"
            android:layout_height="300dp"></EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/audiowide"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:text="Expected Salary"></TextView>
        <EditText

            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/stroke"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Enter expected salary (in Rupees)"
            android:textSize="15dp"
            android:fontFamily="@font/audiowide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/audiowide"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:text="Your Availability:"></TextView>


            <EditText

                android:padding="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/stroke"
                android:drawableStart="@drawable/date"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:fontFamily="@font/audiowide"
                android:hint="Starting Date"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"></EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/audiowide"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:text="Working Hours"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <EditText
                android:padding="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/stroke"
                android:drawableStart="@drawable/clock"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="From Time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="15dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/audiowide"
                android:layout_height="wrap_content"></EditText>
            <EditText
                android:padding="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/stroke"
                android:drawableStart="@drawable/clock"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="To Time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="15dp"
                android:fontFamily="@font/audiowide"
                android:layout_height="wrap_content"></EditText>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/audiowide"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:text="Contract Duration"></TextView>
        <RadioButton
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Less than 1 week"
            android:textSize="15dp"
            android:fontFamily="@font/audiowide">
        </RadioButton>
        <RadioButton
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 week"
            android:textSize="15dp"
            android:fontFamily="@font/audiowide">
        </RadioButton>

        <RadioButton
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Less than 1 month"
            android:textSize="15dp"
            android:fontFamily="@font/audiowide">
        </RadioButton>
        <RadioButton
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 month"
            android:textSize="15dp"
            android:fontFamily="@font/audiowide">
        </RadioButton>

        <Button
            android:id="@+id/post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded"
            android:text="Post"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/audiowide"></Button>


    </LinearLayout>

</ScrollView>